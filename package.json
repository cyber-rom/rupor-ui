{
  "name": "ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "rm -rf ./dist && tsc --project ./tsconfig.prod.json && tsc --project ./tsconfig.prod.json -d",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install",
    "lint": "tsc --noEmit && eslint --fix './**/*.{ts,tsx}'",
    "storybook:build": "build-storybook -o docs-build -s public"
  },
  "dependencies": {
    "@types/node": "^16.11.19",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "colord": "^2.9.2",
    "param-case": "^3.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "styled-components": "^5.3.3",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "uniqid": "5.4.0",
    "web-vitals": "^2.1.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.4.12",
    "@storybook/addon-essentials": "^6.4.12",
    "@storybook/addon-links": "^6.4.12",
    "@storybook/builder-webpack5": "^6.4.12",
    "@storybook/manager-webpack5": "^6.4.12",
    "@storybook/node-logger": "^6.4.12",
    "@storybook/preset-create-react-app": "^4.0.0",
    "@storybook/react": "^6.4.12",
    "@types/color": "^3.0.2",
    "@types/styled-components": "^5.1.20",
    "@types/uniqid": "^5.3.2",
    "eslint": "^8.6.0",
    "eslint-config-rupor": "github.com:cyber-rom/rupor-eslint",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "webpack": "^5.66.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": "npm run lint"
  },
  "engines": {
    "node": "16.13.2",
    "yarn": "3.1.1"
  }
}

{
  "extends": [
    "rupor" // Основные правила ESlint для всех проектов "Рупор"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "indent": "off", // Правила отступов, конфликтуют с @typescript-eslint/indent, поэтому отключены
    "@typescript-eslint/indent": [ // Отступы
      "error",
      2
    ],
    "react/jsx-indent-props": [ // Отступы
      "error",
      2
    ],
    "react/jsx-indent": [ // Отступы
      "error",
      2
    ],
    "react/require-default-props": "off",
    "import/prefer-default-export": 0,
    "no-console": "warn",
    "react/jsx-handler-names": "off", // Отключено наименование обработчиков событий согласно шаблону "handle..."
    "react/function-component-definition": "off", // Отключено создание компонентов только как function declaration
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "jsx-a11y/no-static-element-interactions": "off",
    "arrow-body-style": "off",
    "react/self-closing-comp": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  }
}